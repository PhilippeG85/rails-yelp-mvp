<h1>Restaurants</h1>

<%= link_to 'Create restaurant', new_restaurant_path %>

<div class="restos">
  <% @restaurants.each do |restaurant| %>
    <div class="resto">
    <h3><%= restaurant.name %></h3>
    <h4><%= restaurant.address %></h4>
    <p><%= restaurant.phone_number %></p>
    <%= link_to restaurant.name, restaurant_path(restaurant) %>
    <br></div>
  <% end %>
</div>
